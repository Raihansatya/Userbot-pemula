FROM node:18-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm install --production

# Copy source code
COPY . .

# Build TypeScript
RUN npm run build

# Create non-root user
RUN addgroup -g 1001 -S nodejs
RUN adduser -S telegram-bot -u 1001

# Change ownership
RUN chown -R telegram-bot:nodejs /app

# Switch to non-root user
USER telegram-bot

# Start the bot
CMD ["npm", "start"]
